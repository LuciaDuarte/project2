<div class="global-body-margin-top">


<div class="container-fluid global-signup-container">
  <div class="row alignment-items">
    <div class="col signup-col image-signup-container">
        <div>
        <img class="signup-visual" src="/images/signup-visual-2.png" alt="signup visual">
        </div>
    </div>


  <div class="col signup-col" id="signup-form-container">
      <h4 class='form-typeh4'>Signup to Symbiosis</h4>
         <form action="/signup" method="POST" class="registration-form container">

          <h5 class='form-typeh5'> Do you want to help or do you want to be help by the community? </h5>

            <div class="signup-radio-button-type container">
            <label for="help">
              Provide help
              <!--<input type="checkbox" name="helper" value="Provide help">-->
              <input type="radio" id="radioHelper" name="userType" value="Provide help" onclick="checkUserType()" >
            </label>

            <label for="need">
              Be helped
            <!-- <input type="checkbox" name="needy" value="Be helped">-->
              <input type="radio" id="radioNeedy"  name="userType" value="Be helped" onclick="checkUserType()" >
            </label>
            </div>

            <label for="name">
              <input type="text" name="firstName" placeholder="Your first name" required>
            </label>

            <label>
              <input type="text" name="lastName" placeholder="Your last name" required>
            </label>

            <label>
              <input type="text" name="userName" placeholder="Your username" required>
            </label>

            <label>
              <input type="email" name="email" placeholder="Your email" required>
            </label>

            <div class="form-elements-grouping">
            <label>
              <input type="text" name="address" placeholder="Your address">
            </label>
            <label>
              <input type="text" name="city" placeholder="Your city">
            </label>
            </div>

            <div class="form-elements-grouping">
            <label>
              <input type="text" name="postCode" placeholder="Your postcode">
            </label>
            <label>
              <input type="text" name="country" placeholder="Your country">
            </label>
            </div>

            <label>
            Password
              <input type="password" name="password" required>
            </label>




      <div id="divHelperSection" style="display: none;">   
        <h5 class='form-typeh5'> You want to provide: </h5>
            <label>
              <input type="radio" value="food"  name="helpType" id="food-helper">
               Food  
            </label>

            <label>
              <input type="radio" value="healthcare" name="helpType" id="healthcare-helper" >
            Healthcare
            </label>

            <label>
              <input type="radio" value="hosting" name="helpType" id="hosting-helper" >
            Hosting
            </label>

            <label>
              <input type="radio" value="administrative" name="helpType" id="administrative-helper" >
             Administrative help
            </label>
      </div>


      <div id="divNeedySection" style="display: none;">   
        <h5 class='form-typeh5'> You need help for: </h5>
            <label>
              <input type="radio" value="food"  name="needType" id="food-needer">
             Food  
            </label>

            <label>
              <input type="radio" value="healthcare" name="needType" id="healthcare-needer" >
              Healthcare
            </label>

            <label>
              <input type="radio" value="hosting" name="needType" id="hosting-needer" >
              Hosting
            </label>

            <label>
              <input type="radio" value="administrative" name="needType" id="administrative-needer" >
              Administrative help
            </label>
      </div>


      <div >
            Please precise:
              <select id="subServiceSelect" name="subServices">
                <div id="signup-medical-options" style="display: ,;">
                    <option value="doctor">Doctor</option>
                    <option value="nurse">Nurse</option>
                    <option value="psychologist">Psychologist</option>
                    <option value="medical student">Medical Student</option>
                </div>
                <div id="signup-administrative-options">
                    <option value="lawyer">Lawyer</option>
                    <option value="public advisor">Public Advisor</option>
                    <option value="volunteer">Volunteer</option>
                </div>
                <div id="signup-hosting-options">
                    <option value="resident">Resident</option>
                    <option value="landlord">Landlord</option>
                    <option value="hotel">Hotel</option>
                </div>
                <div id="signup-food-options">
                    <option value="restaurant">Restaurant</option>
                    <option value="grocery store">Grocery Store</option>
                    <option value="other">Other</option>
                </div>

              </select>
            </div>

        <button type="submit" class="btn btn-primary btn-round submit-button">
            Sign up <i class="fas fa-heart"></i> </button>



          {{#if errorMessage}}
          <div class="error">  {{errorMessage}}</div>
          {{/if}}


      </form>

          </div>
        </div>
  
</div>
</div>



<script>
  let subServices = []


  function checkUserType() {
    if (document.getElementById("radioHelper").checked) {
       document.getElementById("divHelperSection").style.display = "flex";
       document.getElementById("divNeedySection").style.display = "none";
    } else if (document.getElementById("radioNeedy").checked) {
        document.getElementById("divHelperSection").style.display = "none";
       document.getElementById("divNeedySection").style.display = "flex";
    }

    function populateSubServices() {
      //if healthcare
      subServices.push({
        text: "Doctor",
        value: "doctor"
      },
      {
        text: "Nurse",
        value: "nurse"
      })

      subServices.forEach((subService) => {
         document.getElementById("subServiceSelect").innerHTML += `<option value="${subService.value}">${subService.text}</option>`;
      })
     


    }
   
  }
</script>

