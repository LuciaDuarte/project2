<h2>Signup</h2>


  
  <form action="/signup" method="POST" class="registration-form container">

    <h5> Do you want to help or to be helped? </h5>

      <label for="help">
        Provide help
        <!--<input type="checkbox" name="helper" value="Provide help">-->
        <input type="radio" name="userType" value="Provide help" >
      </label>

      <label for="need">
        Be helped
       <!-- <input type="checkbox" name="needy" value="Be helped">-->
        <input type="radio" name="userType" value="Be helped" >
      </label>

      <label for="name">
        First Name
        <input type="text" name="firstName" placeholder="Your first name" required>
      </label>

      <label>
        Last Name
        <input type="text" name="lastName" placeholder="Your last name" required>
      </label>

      <label>
        Username
        <input type="text" name="userName" placeholder="Your username" required>
      </label>

      <label>
        Email
        <input type="email" name="email" placeholder="Your email" required>
      </label>

      
      <label>
        Address
        <input type="text" name="address" placeholder="Your address">
      </label>

        
      <label>
        City
        <input type="text" name="city" placeholder="Your address">
      </label>

      <label>
        PostCode
        <input type="text" name="postCode" placeholder="Your postcode">
      </label>

     <label>
        country 
        <input type="text" name="country" placeholder="Your postcode">
      </label>

      <label>
      Password
        <input type="password" name="password" required>
      </label>





<label>   
  <h5> You want to provide: </h5>
      <label>
      Food  
        <input type="radio" value="food"  name="helpType" id="food-helper">
      </label>

      <label>
      Healthcare
        <input type="radio" value="healthcare" name="helpType" id="healthcare-helper" >
      </label>

      <label>
      Hosting
        <input type="radio" value="hosting" name="helpType" id="hosting-helper" >
      </label>

      <label>
      Administrative help
        <input type="radio" value="administrative" name="helpType" id="administrative-helper" >
      </label>
</label>


<label>   <h5> You need help for: </h5>
      <label>
      Food  
        <input type="radio" value="food"  name="needType" id="food-needer">
      </label>

      <label>
      Healthcare
        <input type="radio" value="healthcare" name="needType" id="healthcare-needer" >
      </label>

      <label>
      Hosting
        <input type="radio" value="hosting" name="needType" id="hosting-needer" >
      </label>

      <label>
      Administrative help
        <input type="radio" value="administrative" name="needType" id="administrative-needer" >
      </label>
</label>



      <label>
      Please precise:
        <select id="subService" name="subServices">
          <option value="Doctor">Doctor</option>
          <option value="Nurse">Nurse</option>
          <option value="Psychologist">Psychologist</option>
          <option value="Restaurant">Restaurant</option>
          <option value="Grocery shops">Grocery Store</option>
          <option value="Individual">Individual</option>
          <option value="Lawyer">Landlord</option>
          <option value="Advisor">Hotel</option>
          <option value="Other">Lawyer</option>
          <option value="Public Entity">Other</option>
        </select>
      </label>

   <button type="submit" class="btn btn-primary btn-round submit-button">
      Sign up <i class="fas fa-heart"></i> </button>



    {{#if errorMessage}}
    <div class="error"> {{errorMessage}}</div>
    {{/if}}

</form>
